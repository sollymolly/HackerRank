import string
#variables
alphabet = string.ascii_lowercase
arr = []
    
#rangoli making
for i in range(n):
    s = '-'.join(alphabet[i : n])#the letters in between
    arr.append(s[::-1] + s[1:])#all but first and reverse

#variable
width = len(arr[0])
    
#printing the thing
for j in range(n - 1, 0, -1):
    print((arr[j]).center(width, '-'))#centers within dashes

#opposite side
for k in range(n):
    print((arr[k]).center(width, '-'))

    
